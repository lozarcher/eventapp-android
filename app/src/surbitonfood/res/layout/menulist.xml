<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/menuImage"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:src="@drawable/red_plate"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="TextView"
        android:textColor="#fff"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/spoonImage"
        android:layout_width="45dp"
        android:layout_height="130dp"
        android:layout_marginLeft="-20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cutlery_spoon"
        android:layout_toRightOf="@+id/menuImage"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/chopsticksImage"
        android:layout_width="45dp"
        android:layout_height="130dp"
        android:layout_marginLeft="-20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cutlery_chopsticks"
        android:layout_toRightOf="@+id/menuImage"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/forkImage"
        android:layout_width="45dp"
        android:layout_height="120dp"
        android:src="@drawable/cutlery_fork"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menuImage"
        android:layout_toStartOf="@+id/menuImage"
        android:layout_marginRight="-30dp"
        android:visibility="visible"
        />


    <ImageView
        android:id="@+id/knifeImage"
        android:layout_width="40dp"
        android:layout_height="130dp"
        android:layout_marginLeft="-30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cutlery_knife"
        android:layout_toEndOf="@+id/menuImage"
        android:layout_toRightOf="@+id/menuImage"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/teaspoonImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/cutlery_teaspoon"
        android:visibility="visible"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/menuImage"
        android:layout_toEndOf="@+id/menuImage"
        android:layout_toRightOf="@+id/menuImage"/>
</RelativeLayout>