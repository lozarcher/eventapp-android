<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="10dip" >

    <!--  ListRow Left Thumbnail image -->
    <RelativeLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <com.tomerrosenfeld.customanalogclockview.CustomAnalogClock
            android:id="@+id/analog_clock"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="12sp"
            android:textStyle="italic"
            android:typeface="normal"
            android:layout_marginTop="1dip"
            android:layout_below="@+id/analog_clock"
            android:layout_centerHorizontal="true"
            android:text="12:00" />
    </RelativeLayout>

    <!--  ListRow Left Thumbnail image -->
    <RelativeLayout android:id="@+id/eventDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:orientation="vertical">
    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="40dp"
        android:paddingRight="40dp"
        android:text="Event Title"
        android:textColor="#040404"
        android:typeface="normal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Summary -->
    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="#343434"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="normal"
        android:layout_marginTop="1dip"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="40dp"
        android:paddingRight="40dp"
        android:text="12:00 @ Event Venue" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/favouriteIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rightArrow"
        android:src="@drawable/ic_favorite_unset" />

    <!-- Rightend Arrow -->
    <ImageView android:layout_width="wrap_content"
        android:id="@+id/rightArrow"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
